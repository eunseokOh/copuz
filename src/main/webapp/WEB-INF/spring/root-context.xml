<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="datasource_mysql"/>
		<property name="typeAliasesPackage" value="kr.co.copuzzle"/>
	</bean>
	
	<bean id="datasource_mysql" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="net.sf.log4jdbc.DriverSpy"/>
		<property name="url" value="jdbc:log4jdbc:mysql://192.168.0.43:3306/co_puzzle"/>
		<property name="username" value="mirim"/>
		<property name="password" value="mirim"/>
	</bean>
	
	<!-- Mappers -->
	<bean id="userMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="sqlSessionFactory" ref="sqlSessionFactory"/>
		<property name="mapperInterface" value="kr.co.copuzzle.user.UserMapper"/>
	</bean>
	
	<bean id="scoreMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="sqlSessionFactory" ref="sqlSessionFactory"/>
		<property name="mapperInterface" value="kr.co.copuzzle.score.ScoreMapper"/>
	</bean>
	
	
</beans>
